# define ALMT_NAME_LENGTH 30

typedef struct{
    int number_of_seqs;
    int length;
    char ** sequence;
    char ** name;
    int * seq_gaps;
    int * column_gaps;
    Node **node;
    double **seq_dist;
    int  **aligned_sites;
    int  **identical_sites;
    int  **similar_sites;
    char * query_seq;
    char * query_seq_bkp;
    char query_name[ALMT_NAME_LENGTH];
    int query_gaps;
}  Alignment;
